@model IEnumerable<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Customers</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Customer
    </a>
</div>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search customers by name or email...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
        {
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Clear Search
                </a>
            </div>
        }
    </div>
</form>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Shipping Address</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.ShippingAddress</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.RowKey" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.RowKey" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.RowKey" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this customer?');" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
                        {
                            <span>No customers found matching your search criteria.</span>
                        }
                        else
                        {
                            <span>No customers found. <a asp-action="Create">Create the first customer</a></span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
