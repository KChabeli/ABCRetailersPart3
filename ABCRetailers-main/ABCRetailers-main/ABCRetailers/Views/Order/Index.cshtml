@model IEnumerable<ABCRetailers.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-shopping-cart"></i> Orders</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Order
    </a>
</div>

<!-- Search Form -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search orders by customer, product, or status...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
        {
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Clear Search
                </a>
            </div>
        }
    </div>
</form>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Order Date</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><code>@item.RowKey.Substring(0, 8)...</code></td>
                        <td>@(ViewBag.CustomerNames?[item.CustomerId] ?? item.CustomerId)</td>
                        <td>@(ViewBag.ProductNames?[item.ProductId] ?? item.ProductId)</td>
                        <td>@item.OrderDate.ToString("MMM dd, yyyy")</td>
                        <td class="text-center">@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td><strong>@item.TotalPrice.ToString("C")</strong></td>
                        <td>
                            <span class="badge badge-@(item.Status switch {
                                "Submitted" => "primary",
                                "Processing" => "warning", 
                                "Shipped" => "info",
                                "Delivered" => "success",
                                "Cancelled" => "danger",
                                _ => "secondary"
                            })">@item.Status</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.RowKey" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.RowKey" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-warning" asp-action="UpdateStatus" asp-route-id="@item.RowKey" title="Update Status">
                                    <i class="fas fa-flag"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.RowKey" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this order?');" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchString))
                        {
                            <span>No orders found matching your search criteria.</span>
                        }
                        else
                        {
                            <span>No orders found. <a asp-action="Create">Create the first order</a></span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
