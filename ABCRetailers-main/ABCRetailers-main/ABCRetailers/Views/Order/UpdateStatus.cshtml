@model ABCRetailers.Models.Order

@{
    ViewData["Title"] = "Update Order Status";
    var order = ViewBag.Order as ABCRetailers.Models.Order;
    var statusOptions = ViewBag.StatusOptions as List<SelectListItem>;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Update Order Status</h4>
            </div>
            <div class="card-body">
                @if (order != null)
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order ID:</strong> @order.RowKey
                        </div>
                        <div class="col-md-6">
                            <strong>Current Status:</strong> 
                            <span class="badge badge-@(order.Status switch {
                                "Submitted" => "primary",
                                "Processing" => "warning", 
                                "Shipped" => "info",
                                "Delivered" => "success",
                                "Cancelled" => "danger",
                                _ => "secondary"
                            })">@order.Status</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Customer ID:</strong> @order.CustomerId
                        </div>
                        <div class="col-md-6">
                            <strong>Product ID:</strong> @order.ProductId
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Quantity:</strong> @order.Quantity
                        </div>
                        <div class="col-md-6">
                            <strong>Total Price:</strong> @order.TotalPrice.ToString("C")
                        </div>
                    </div>

                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@order.RowKey" />
                        
                        <div class="form-group">
                            <label for="status">New Status:</label>
                            <select name="status" id="status" class="form-control" required>
                                <option value="">-- Select New Status --</option>
                                @if (statusOptions != null)
                                {
                                    @foreach (var option in statusOptions)
                                    {
                                        <option value="@option.Value" disabled="@(option.Value == order.Status)">
                                            @option.Text
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Status
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger">
                        Order not found.
                    </div>
                    <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
                }
            </div>
        </div>
    </div>
</div>
